{
  "title": "Velux KLF200 Gateway",
  "config": {
    "step": {
      "user": {
        "data": {
          "host": "[%key:common::config_flow::data::host%]",
          "password": "[%key:common::config_flow::data::password%]"
        }
      },
      "discovery_confirm": {
        "description": "Please enter the password for {name} ({host})",
        "data": {
          "password": "[%key:common::config_flow::data::password%]"
        }
      }
    },
    "error": {
      "cannot_connect": "[%key:common::config_flow::error::cannot_connect%]",
      "invalid_auth": "[%key:common::config_flow::error::invalid_auth%]",
      "invalid_host": "[%key:common::config_flow::error::invalid_host%]"
    },
    "abort": {
      "no_devices_found": "[%key:common::config_flow::abort::no_devices_found%]",
      "already_configured": "[%key:common::config_flow::abort::already_configured_device%]"
    }
  },
  "services": {
    "reboot_gateway": {
      "name": "Reboot gateway",
      "description": "Reboots the KLF200 gateway."
    },
    "set_cover_position": {
      "name": "Set position",
      "description": "Move to specific position all or specified cover.",
      "fields": {
        "position": {
          "name": "Position",
          "description": "Desired position of the cover."
        },
        "velocity": {
          "name": "Velocity",
          "description": "Desired velocity percentage of the movement."
        }
      }
    },
    "open_cover": {
      "name": "Open",
      "description": "Open all or specified cover.",
      "fields": {
        "velocity": {
          "name": "Velocity",
          "description": "Desired velocity percentage of the movement."
        }
      }
    },
    "close_cover": {
      "name": "Close",
      "description": "Close all or specified cover.",
      "fields": {
        "velocity": {
          "name": "Velocity",
          "description": "Desired velocity percentage of the movement."
        }
      }
    }
  }
}
